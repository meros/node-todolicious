<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{{pageTitle}}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles/style.css">
    <script data-main="js/soundboard" src="js/require.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="flexy">
      <h1>{{{pageTitle}}}</h1>
      {{#files}}
      <a class="button-sound" href="javascript:void(0)" data-sound="{{{name}}}">
        <img class="button-image" src="data/{{{imgName}}}"/>
      </a>
      {{/files}}
    </div>
    <div class="container">
      <div class="col-xs-6 col-xs-offset-2 col-md-4 col-md-offset-4">
        <div class="list-group">
          <a href="#" class="list-group-item active" data-target="remote">
            <h4 class="list-group-item-heading">Play on server</h4>
          </a>
          <a href="#" class="list-group-item" data-target="broadcast">
            <h4 class="list-group-item-heading">Broadcast to all connected browsers</h4>
          </a>
          <a href="#" class="list-group-item" data-target="local">
            <h4 class="list-group-item-heading">Play in this browser</h4>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>